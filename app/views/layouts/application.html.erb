<!DOCTYPE html>
<html>
    <head>
	<title>IdentifierToken</title>
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body class="container">
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	    <a class="navbar-brand" href="<%= root_path %>">
		<%= fa_icon "home" %>
	    </a>
	    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	    </button>

	    <div class="collapse navbar-collapse" id="navbarSupportedContent">
		<% if @company && @company.persisted? %>
		    <ul class="navbar-nav mr-auto">
			<span class="navbar-text"><%= @company.name %></span>
			
			<% path = company_employees_path(@company) %>
			<li class="nav-item <%= 'active' if current_page?(path) %>">
			    <a class="nav-link" href="<%= path %>">Employees</a>
			</li>
			
			<% path = company_clients_path(@company) %>
			<li class="nav-item <%= 'active' if current_page?(path) %>">
			    <a class="nav-link" href="<%= path %>">Clients</a>
			</li>
		    </ul>
		<% end %>
	    </div>
	</nav>

	<% flash.each do |type, message| %>
	    <div class="<%= alert_class(type) %>">
		<%= message%>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		    <span aria-hidden="true">&times;</span>
		</button>
	    </div>
	<% end %>

	<%= yield %>
    </body>
</html>
